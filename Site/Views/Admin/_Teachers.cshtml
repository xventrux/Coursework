</div>

<script>
    updateTeachers();

    function updateTeachers() {
        $.ajax({
            type: 'GET',
            url: 'Admin/GetTeachers',
            success: function(res) {
                let h = "";

                
                for(let i = 0; i < res.length; i++) {
                    h += "<tr>";
                    h += "<th scope='row'>" + (i + 1) + "</th>";
                    let name = res[i].surName + " " + res[i].firstName + " " + res[i].middleName;
                    h += "<td>" + name + "</td>";
                    h += "<td>" + res[i].email + "</td>";

                    h += "<td><div style='display:flex; align-items:center; justify-content:space-between'>";
                    if(res[i].isConfirmed) {
                        h += "Подтвержден";
                    }
                    else {
                        h += "<div style='display:flex; align-items:center'>";
                        h += "<span style='margin-right:5px'>Не подтвержден</span>";
                        h += "<button onclick='setAcceptTeacherModal(`" + res[i].id + "`, `" + name + "`)' data-bs-toggle='modal' data-bs-target='#acceptTeacherModal' class='btn btn-primary'>Подтвердить</button>";
                        h += "</div>";

                    }
                    h += "<div style='display:flex; align-items:center'>";
                    h += "<button style='margin-right:5px' class='btn btn-light'><svg xmlns='http://www.w3.org/2000/svg' width='16' height='16' fill='currentColor' class='bi bi-info' viewBox='0 0 16 16'><path d='m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z'/></svg></button>";
                    h += "<button class='btn btn-danger' onclick='setRemoveTeacherModal(`" + res[i].id + "`, `" + name + "`)' data-bs-toggle='modal' data-bs-target='#removeTeacherModal'>Удалить</button>";
                    h += "</div>";
                    h += "</div></td>";
                    h += "</tr>";
                    
                }
                

                $("#TeachersTable").html(h);
            }
        })
    }

    function setRemoveTeacherModal(_id, _name) {
        $("#removeTeacherModalId").val(_id);
        $("#removeTeacherModalName").html(_name);
    }

    function removeTeacher() {
        let _id = $("#removeTeacherModalId").val();
        
        $.ajax({
            type: 'POST',
            url: 'Admin/RemoveUser',
            data: { id: _id },
            success: function() {
                updateTeachers();
            }
        })
    }

    function setAcceptTeacherModal(_id, _name) {
        $("#acceptTeacherModalId").val(_id);
        $("#acceptTeacherModalName").html(_name);
    }

    function acceptTeacher() {
        let _id = $("#acceptTeacherModalId").val();
        
        $.ajax({
            type: 'POST',
            url: 'Admin/AcceptUser',
            data: { id: _id },
            success: function() {
                updateTeachers();
            }
        })
    }
</script>